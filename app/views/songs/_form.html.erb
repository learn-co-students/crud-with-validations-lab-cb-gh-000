<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div>
      <p>There were <%= pluralrize(@song.errors.count, 'error')%>
        processing your request:</p>
    </div>

    <ul>
      <% @song.errors.full_messages.each do |error| %>
        <li><% error %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :released %>
  <%= f.check_box :released %><br>
  <%= f.label :release_year %>
  <%= f.text_field :release_year %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre %>
  <%= f.text_field :genre %><br>
  <%= f.submit %>
<% end %>
